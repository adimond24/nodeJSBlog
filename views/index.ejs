<div class="author">
    <h1 class="author__heading">Hello, I'm Developer</h1>
    <p class="author__body">Web Developer and student</p>
</div>

<img src="img/apple.jpeg" alt="apple">

<section class="articles">
    <h2 class="articles__heading">Latest Posts</h2>

    <!-- Dummy date display until we include posts later on. -->
     <ul class="article-ul">
        <% data.forEach(post =>(<%
            <li>
                <a href="/post/<%= post._id %>">
                    <span> <%- post.title  %> </span>
                    <span class="article-list__date">
                        <% post.createdAt.toDateString() %>
                    </span>
                </a></li>
       %> )); %>
     </ul>

     <a href="#" class="pagination">
        &lt; View Older Posts.
     </a>
</section>

<% if (nextPage !== null) { %>
    <a href="/?page=<%= nextPage %>" class="pagination">&lt; View Older Posts</a>
    <% } %>
  
    <!-- if prevPage is 1 then go to / -->
    <% if (prevPage >= 1) { %> <% if (prevPage === 1) { %>
    <a href="/" class="pagination-newer">View Newer Posts &gt;</a>
    <% } else { %>
    <a href="/?page=<%= prevPage %>" class="pagination-newer"
      >View Newer Posts &gt;</a
    >
    <% } %> <% } %>